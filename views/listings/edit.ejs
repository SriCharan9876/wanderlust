<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Edit the listing</h3>

        <form action="/listings/<%=listing._id %>?_method=PUT" method="POST" class="mb-3 needs-validation" novalidate enctype="multipart/form-data">
            
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" name="details[title]" value="<%= listing.title %>" class="form-control" id="title" required>
                <div class="invalid-feedback">Enter a valid name</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea name="details[description]" class="form-control" id="description" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Please give a short description</div>
            </div>

            <div class="mb-3">
                <p>Original listing Image:</p>
                <img src="<%=previewImgUrl%>" alt="listing_image">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload new Image</label>
                <input type="file" name="details[image]" class="form-control" id="image">
            </div>
            
            <div class="row">

                <div class="mb-3 col-md-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" name="details[price]" value="<%= listing.price %>" class="form-control" id="price" required>
                    <div class="invalid-feedback">Enter a valid price</div>
                </div> 

                <div class="mb-3 col-md-4">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" name="details[country]" value="<%= listing.country %>" class="form-control" id="country" required>
                    <div class="invalid-feedback">Enter a valid country name</div>
                </div>

                <div class="mb-3 col-md-5">
                    <label for="country" class="form-label">Category:</label>
                    <select class="form-select" aria-label="Choose your category" name="details[category]" id="category" required>
                        <option value="beachfront" <%= listing.category === 'beachfront' ? 'selected' : '' %>>Beachfront</option>
                        <option value="urban-stays" <%= listing.category === 'urban-stays' ? 'selected' : '' %>>Urban Stays</option>
                        <option value="mountains" <%= listing.category === 'mountains' ? 'selected' : '' %>>Mountains</option>
                        <option value="historic-gems" <%= listing.category === 'historic-gems' ? 'selected' : '' %>>Historic Gems</option>
                        <option value="unique-stays" <%= listing.category === 'unique-stays' ? 'selected' : '' %>>Unique Stays</option>
                        <option value="nature-rustic" <%= listing.category === 'nature-rustic' ? 'selected' : '' %>>Nature & Rustic</option>
                        <option value="luxury" <%= listing.category === 'luxury' ? 'selected' : '' %>>Luxury</option>
                        <option value="ski-resorts" <%= listing.category === 'ski-resorts' ? 'selected' : '' %>>Ski Resorts</option>
                        <option value="tropical" <%= listing.category === 'tropical' ? 'selected' : '' %>>Tropical</option>
                        <option disabled <%= !listing.category ? 'selected' : '' %> value="">Select your listing type</option>
                    </select>
                </div>

            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" name="details[location]" value="<%= listing.location %>" class="form-control" id="location" required>
                <div class="invalid-feedback">Enter a valid location name</div>
            </div>
            
            <button class="btn btn-dark edit-btn">
                Save
            </button>

            <br><br>
        </form>
    </div>
</div>
