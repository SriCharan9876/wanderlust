<% layout("/layouts/boilerplate.ejs") %>


<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a New listing</h3>

        <form action="/listings" method="POST" class="mb-3 needs-validation" novalidate enctype="multipart/form-data">

            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" placeholder="Give a catchy title" name="details[title]" class="form-control" id="title" required>
                <div class="invalid-feedback">Enter a valid name</div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea name="details[description]" class="form-control" id="description" required></textarea>
                <div class="invalid-feedback">Please give a short description</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Image:</label>
                <input type="file" name="details[image]" class="form-control" id="image" required>
                <div class="invalid-feedback">Please upload a image</div>
            </div>

            <div class="row">

                <div class="mb-3 col-md-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" placeholder="1200" name="details[price]" class="form-control" id="price" required>
                    <div class="invalid-feedback">Enter a valid price</div>
                </div> 

                <div class="mb-3 col-md-4">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" placeholder="India" name="details[country]" class="form-control" id="country" required>
                    <div class="invalid-feedback">Enter a valid country name</div>
                </div>

                <div class="mb-3 col-md-5">
                    <label for="country" class="form-label">Category:</label>
                    <select class="form-select" aria-label="Choose your category" name="details[category]" id="category" required>
                        <option selected value="">Select your listing type</option>
                        <option value="beachfront">Beachfront</option>
                        <option value="urban-stays">Urban Stays</option>
                        <option value="mountains">Mountains</option>
                        <option value="historic-gems">Historic Gems</option>
                        <option value="unique-stays">Unique Stays</option>
                        <option value="nature-rustic">Nature & Rustic</option>
                        <option value="luxury">Luxury</option>
                        <option value="ski-resorts">Ski Resorts</option>
                        <option value="tropical">Tropical</option>
                    </select>
                </div>
                

            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" placeholder=" Hydrabad, Telangana" name="details[location]" class="form-control" id="location" required>
                <div class="invalid-feedback">Enter a valid location name</div>
            </div>

            <button class="btn btn-dark add-btn">
                Add
            </button>

            <br><br>
        </form>
    </div>
</div>

